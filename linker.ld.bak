ENTRY(_start)

SECTIONS
{
	/* Begin putting sections at 1 MiB, a conventional place for kernels to be loaded */
	. = 1M;

	/* First put the multiboot header, as it is required to be put very early 
	   early in the image or the bootloader won't find it. */
	.text BLOCK(4K) : ALIGN(4K)
	{
		*(.multiboot)
		*(.text)
	}

	/* Read-only data. */
	.rodata BLOCK(4K) : ALIGN(4K)
	{
		*(.rodata)
	}

	/* Read-write data (initialized) */
	.data BLOCK(4K) : ALIGN(4K)
	{
		*(.data)
	}

	/* Read-write data (uninitialized) and stack */
	.bss BLOCK(4K) : ALIGN(4K)
	{
    __bss_start = .;    /* ADD THIS LINE HERE */
		*(COMMON)
		*(.bss)
/* The 'end' symbol marks the first byte of free RAM after the kernel */
    _end = .;
    end = .; 
	}

}
